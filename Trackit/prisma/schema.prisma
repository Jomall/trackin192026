// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InventoryItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  quantity    Int      @default(0)
  category    String   // storeroom, bakery, auto
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BakeryItem {
  id          Int      @id @default(autoincrement())
  name        String
  type        String   // machinery or equipment
  description String?
  quantity    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AutoPart {
  id          Int      @id @default(autoincrement())
  name        String
  partNumber  String?
  description String?
  quantity    Int      @default(0)
  price       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vehicle {
  id          Int           @id @default(autoincrement())
  make        String
  model       String
  year        Int
  vin         String        @unique
  maintenances Maintenance[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Maintenance {
  id          Int      @id @default(autoincrement())
  vehicleId   Int
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  type        String   // oil change, tire rotation, etc.
  description String?
  date        DateTime
  nextDue     DateTime?
  cost        Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
